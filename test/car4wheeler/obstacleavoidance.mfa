package FourWheeler

byte STEER_DEGREES = 12 



sequence Strategy {
	when (module.id == @Axis.Front && module.proximity() > PROXIMITY) {
		execute Turn (LEFT);
	} 
	
	do wait(config.assignTime) { 
		meta.createCar();
	} 
		
	meta.drive(FORWARD,FORWARD);
}



sequence Turn {	
	meta.halt(); 
	meta.steer(STEER_DEGREES);
		
	do {
		meta.drive (BACKWARD,BACKWARD);	
	} wait(TIME_BACKWARD);
	
	meta.halt();
	
	meta.steer(-STEER_DEGREES);
	
	execute Strategy;
}
