package TwoWheeler

debug {
	visualize { 
		north [
			@Car.LeftWheel: green;
			@Car.RightWheel: yellow;
			@Car.Driver: magenta;
		]
		south [
			Init: black;
			Turn: gray;
			Strategy: red;
		]
	}
}

// Define identification for the Car
group Car [LeftWheel,RightWheel,Driver]

meta {
	void drive (byte dirLeft, byte dirRight) {
		rotating(@Car.LeftWheel,-dirLeft); 
		rotating(@Car.RightWheel,dirRight);
	} 
}
  
sequence Init {	
	do {
		meta.sizeExtra = 3;
		meta.enable();	
	}  	
	
	do {
		if (#(connDest:WEST)==1)	module.id = @Car.LeftWheel;
		if (#(connDest:EAST)==1)	module.id = @Car.RightWheel;
		if (#()==2) 				module.id = @Car.Driver;	
	}until (config.assignTime);
}	


