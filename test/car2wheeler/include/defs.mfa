package TwoWheeler

debug {
	visualize { 
		north [
			@Car.LeftWheel: green;
			@Car.RightWheel: yellow;
			@Axis.Front: magenta;
		]
		south [
			Init: black;
			Turn: gray;
			Strategy: red;
		]
	}
}

// Define identification for the Car
group Car [LeftWheel,RightWheel]
group Axis [Front]

meta {
	parts 3;
	void drive (float dirLeft, float dirRight) {
		rotating(@Car.LeftWheel,-dirLeft); 
		rotating(@Car.RightWheel,dirRight);
	} 
}
  
sequence Init {	
	enable meta;
	
	do {
		if (#(connNb:WEST)==1)	module.id = @Car.LeftWheel;
		if (#(connNb:EAST)==1)	module.id = @Car.RightWheel;
		if (#()==2) 			module.id = @Axis.Front;
	}until (config.assignTime);
}	


